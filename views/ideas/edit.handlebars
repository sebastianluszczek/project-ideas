<div class="row">
    <div class="col s12 m8 offset-m2">
        {{#each errors}}
        <div class="card-panel red lighten-4">
            <div class="red-text text-darken-4">{{text}}</div>
        </div>
        {{else}}
        {{/each}}
        <div class="row">
            <div class="card">
                <div class="card-content">
                    <h2>Edit Project Ideas</h2>
                    <form action="/ideas/{{idea.id}}?_method=PUT" method="POST">
                        <input type="hidden" name="_method" value="PUT">
                        <div class="input-field">
                            <label for="title">Title</label>
                            <input type="text" name="title" class="validate black-text" value="{{idea.title}}">
                        </div>
                        <div class="input-field">
                            <textarea name="details" class="materialize-textarea black-text">{{idea.details}}</textarea>
                            <label for="details">Details</label>
                        </div>
                        <input type="submit" value="EDIT" class="btn leat darken-4 white-text ">
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>