<div class="row mt-3 center-align">
    <div class="col s12 m8 offset-m2">
        <div class="card">
            <div class="card-content">
                <span class="card-title">Register</span>
                {{> _errors}}
                <form action="/users/register" method="POST">
                    <div class="input-field">
                        <label for="name">Name</label>
                        <input type="text" id="name" name="name" class="validate" value="{{name}}" required />
                    </div>
                    <div class="input-field">
                        <label for="email">Email</label>
                        <input type="text" id="email" name="email" class="validate" value="{{email}}" required />
                    </div>
                    <div class="input-field">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" class="validate" value="{{password}}"
                            required />
                    </div>
                    <div class="input-field">
                        <label for="password2">Confirm password</label>
                        <input type="password" id="password2" name="password2" class="validate" value="{{password2}}"
                            required />
                    </div>
                    <button type="submit" class="btn teal darken-3 white-text">Register</button>
                </form>
                <br>
                <p class="mt-3">Already have an Account? <a href="/users/login" class="teal-text text-darken-3">Login</a></p>
            </div>
        </div>
    </div>
</div>